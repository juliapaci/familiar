DEBUG: arg or yes end

OPTIMISATION:       -ggdb or -O2                    on DEBUG end
OPENGL_DEBUG_APP:   empty or -DOPENGL_DEBUG_APP=1   on DEBUG end

ROOT:           ..                              end
SRC:            ROOT + pathSep + src            end
ENGINE:         ROOT + pathSep + engine         end
EXAMPLE:        ROOT + pathSep + examples       end
THIRD_PARTY:    ROOT + pathSep + external       end
BUILD:          ROOT + pathSep + build          end
ZIGLIB:         ROOT + pathSep + lib            end
ZIGBIN:         ROOT + pathSep + bin            end
ZIGEXEC:        ROOT + pathSep + zig            end
CC:             env or gcc                      end

C:
    Compiler_flags:
        -Wall
        -Wextra
        -Wno-missing-braces
        OPTIMISATION
    end

    Linker_flags:
        -L + BUILD
        -I + THIRD_PARTY
        -I + THIRD_PARTY + pathSep + gl
        -I + THIRD_PARTY + pathSep + cglm + pathSep + include
        -I + SRC
        -lglad  info static
        -lglfw  info dynamic
        -lGL    info dynamic
        -lm     info dynamic
        -lengine
        -lstb   info static
    end
end
